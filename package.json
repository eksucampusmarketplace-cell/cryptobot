{
  "name": "cryptobot",
  "version": "1.0.0",
  "description": "Telegram Crypto Exchange Bot - Sell crypto and receive bank transfer",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "deposit-checker": "tsx src/workers/depositChecker.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "crypto",
    "exchange"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.5",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.1",
    "ethers": "^6.11.0",
    "node-cron": "^3.0.3",
    "telegraf": "^4.15.3",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "prisma": "^5.9.1",
    "tsx": "^4.7.0"
  }
}
