# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Supported Cryptocurrencies (comma-separated)
# Note: When using NOWPayments, this is overridden by available API coins
SUPPORTED_CRYPTOS=BTC,ETH,USDT,USDC

# NOWPayments API Configuration
# Get your API key from: https://account.nowpayments.io/
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
USE_NOWPAYMENTS=true

# Blockchain API Keys (used as fallback or in addition to NOWPayments)
BLOCKCYPHER_API_KEY=your_blockcypher_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
TRONGRID_API_KEY=your_trongrid_api_key

# Wallet Configuration
WALLET_ENCRYPTION_KEY=your_encryption_key_here

# Database
DATABASE_URL="file:./dev.db"

# Exchange Settings
EXCHANGE_FEE_PERCENT=1.5
MIN_DEPOSIT_USD=10
MAX_DEPOSIT_USD=10000

# Rate Limiting
RATE_LIMIT_MESSAGES=5
RATE_LIMIT_WINDOW_MS=60000

# Notification Settings
ADMIN_NOTIFICATIONS=true
USER_NOTIFICATIONS=true
