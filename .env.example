# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Server Port (Render sets this automatically)
# PORT=3001

# Paystack Configuration
# Get your secret key from: https://dashboard.paystack.co/#/settings/developer
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here

# WebApp URL (public URL where the registration page is hosted)
# For local development: use ngrok or similar
# For production: your domain
WEBAPP_URL=https://your-domain.com

# Self URL (used for keep-alive pings to prevent sleeping)
# On Render, this is automatically set as RENDER_EXTERNAL_URL
# On other platforms, set this to your bot's public URL
SELF_URL=https://your-bot-domain.com

# Supported Cryptocurrencies (comma-separated)
# Note: When using NOWPayments, this is overridden by available API coins
SUPPORTED_CRYPTOS=BTC,ETH,USDT,USDC

# NOWPayments API Configuration
# Get your API key from: https://account.nowpayments.io/
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
USE_NOWPAYMENTS=true

# NOWPayments IPN (Webhook) Configuration
# IPN provides instant payment notifications (recommended over polling)
# 1. Enable IPN in your NOWPayments dashboard
# 2. Set webhook URL to: https://your-domain.com/webhook/nowpayments
# 3. Generate IPN secret and add it here
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_here
NOWPAYMENTS_IPN_ENABLED=true

# Webhook URL (where NOWPayments sends IPN notifications)
# This should be your public domain + /webhook/nowpayments
WEBHOOK_URL=https://your-domain.com/webhook/nowpayments

# Blockchain API Keys (used as fallback or in addition to NOWPayments)
BLOCKCYPHER_API_KEY=your_blockcypher_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
TRONGRID_API_KEY=your_trongrid_api_key

# Wallet Configuration
WALLET_ENCRYPTION_KEY=your_encryption_key_here

# Database (PostgreSQL)
# IMPORTANT FOR SUPABASE: Use the POOLER connection string, not the direct connection!
# 
# Direct connection (may fail on Render/containers): 
#   postgres://postgres.[project-ref]:[password]@db.[project-ref].supabase.co:5432/postgres
#
# Pooler connection (RECOMMENDED for Render):
#   postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
#
# Find your pooler connection string in:
#   Supabase Dashboard > Project Settings > Database > Connection Pooling > Session mode
#
DATABASE_URL="postgresql://user:password@localhost:5432/cryptobot"

# Direct database URL (optional, used for migrations)
# This is the non-pooled connection for Prisma migrations
# DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/cryptobot"

# Exchange Settings
EXCHANGE_FEE_PERCENT=1.5
MIN_DEPOSIT_USD=10
MAX_DEPOSIT_USD=10000

# Rate Limiting
RATE_LIMIT_MESSAGES=5
RATE_LIMIT_WINDOW_MS=60000

# Notification Settings
ADMIN_NOTIFICATIONS=true
USER_NOTIFICATIONS=true
